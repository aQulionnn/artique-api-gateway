{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "write-api-route": {
        "ClusterId": "write-api-cluster",
        "RateLimiterPolicy": "writePolicy",
        "Match": {
          "Path": "/api/{**catch-all}",
          "Methods": [ "POST", "PUT", "PATCH", "DELETE" ]
        }
      },
      "read-api-route": {
        "ClusterId": "read-api-cluster",
        "RateLimiterPolicy": "readPolicy",
        "Match": {
          "Path": "/graphql/{**catch-all}",
          "Methods": [ "POST" ]
        }
      },
      "diagnostics-route": {
        "ClusterId": "write-api-cluster",
        "RateLimiterPolicy": "readPolicy",
        "Match": {
          "Path": "/api/diagnostics/{**catch-all}",
          "Methods": [ "GET" ]
        }
      }
    },
    "Clusters": {
      "write-api-cluster": {
        "Destinations": {
          "api-destination": {
            "Address": "https://localhost:7039/api"
          }
        }
      },
      "read-api-cluster": {
        "Destinations": {
          "api-destination": {
            "Address": "https://localhost:7039/graphql"
          }
        }
      }
    }
  }
}