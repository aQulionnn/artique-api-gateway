{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "write-api-route": {
        "ClusterId": "api-cluster",
        "RateLimiterPolicy": "writePolicy",
        "Match": {
          "Path": "/{**catch-all}",
          "Methods": [ "POST", "PUT", "PATCH", "DELETE" ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "read-api-route": {
        "ClusterId": "api-cluster",
        "RateLimiterPolicy": "readPolicy",
        "Match": {
          "Path": "/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "dewc": {
            "Address": "https://artique-api-dewc.azurewebsites.net"  
          },
          "jpw": {
            "Address": "https://artique-api-jpw.azurewebsites.net"
          }
        }
      }
    }
  }
}